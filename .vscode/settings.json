{
  "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
  "editor.formatOnType": false, // required
  "editor.formatOnPaste": true, // optional
  "editor.formatOnSave": true, // optional
  "editor.formatOnSaveMode": "file", // required to format on save
  "files.autoSave": "onFocusChange", // optional but recommended
  "vs-code-prettier-eslint.prettierLast": false,
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#63aac4",
    "activityBar.background": "#63aac4",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#f6e8f2",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#63aac4",
    "statusBar.background": "#4394b1",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#63aac4",
    "statusBarItem.remoteBackground": "#4394b1",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#4394b1",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#4394b199",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#4394b1",
  "postcss.validate": false,
  "[postcss]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
}